{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "vite.config.ts",
    "vite.config.js",
    "vitest.config.ts",
    "config/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["dist", "coverage"]
}
